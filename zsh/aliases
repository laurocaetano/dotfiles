# General
alias ls='ls -F'
alias v='vim'
alias ..='cd ..'
alias e=$EDITOR
alias grep='grep --color=auto'
alias diff=colordiff
alias la='ls -alh'
alias reload='source ~/.zshrc && echo "sourced ~/.zshrc"'

# Git
alias gst='git status'
alias gc='git commit'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'
alias ga='git add'
alias me='git config --local user.email laurocaetano1@gmail.com'
